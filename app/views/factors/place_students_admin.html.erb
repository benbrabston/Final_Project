<% if current_student.admin == true  %>



<div class="row">
  <div class="col-md-12">
    <form action="/place_students" class="form-horizontal">
      <div class="form-group">
        <label for="school" class="col-sm-2 control-label">
          School
        </label>
        <div class="col-sm-10">
          <%= select_tag(:school_id, options_from_collection_for_select(School.all, :id, :name), :class => "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        <input type="submit" value="Go To School" class="btn btn-primary">
        </div>


      </div>
    </form>
  </div>
</div>



<% end %>
