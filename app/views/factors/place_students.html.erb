<% if current_student.admin == true || current_student.school_admin == true  %>

<div class="row">
  <div class="col-md-12">
    <form action="/make_placements" class="form-horizontal">


    <% @students.each do |student| %>

      <div class = "form_group">
        <label for="school" class="col-sm-2 control-label">
          <%= student.first_name %> <%= student.last_name %>
        </label>
        <div class="col-sm-10">
          <%= select_tag(:dorm_id, options_from_collection_for_select(Dorm.where({ :school_id => @school_id }), :id, :name), :class => "form-control") %>
        </div>
      </div>
    <% end %>

    <label></label>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Submit Assignments" class="btn btn-primary">
      </div>
    </div>

  </form>
</div>
</div>




<% end %>
