<div class="page-header">
  <h1>Students</h1>
</div>

<p><a href="/students/new" class="btn btn-primary">Add a New Student</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>School</th>
      <th>Pref location</th>
      <th>Crit 1</th>
      <th>Crit 2</th>
      <th>Crit 3</th>
      <th>Crit 4</th>
      <th>Crit 5</th>
      <th>Crit 6</th>
      <th>Crit 7</th>
      <th>Crit 8</th>
      <th>Crit 9</th>
      <th>Crit 10</th>
      <th>Gender</th>
      <th>Gender i</th>
      <th>Country</th>
      <th>Dorm</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.email %></td>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.school %></td>
        <td><%= student.pref_location %></td>
        <td><%= student.crit_1 %></td>
        <td><%= student.crit_2 %></td>
        <td><%= student.crit_3 %></td>
        <td><%= student.crit_4 %></td>
        <td><%= student.crit_5 %></td>
        <td><%= student.crit_6 %></td>
        <td><%= student.crit_7 %></td>
        <td><%= student.crit_8 %></td>
        <td><%= student.crit_9 %></td>
        <td><%= student.crit_10 %></td>
        <td><%= student.gender %></td>
        <td><%= student.gender_i %></td>
        <td><%= student.country %></td>
        <td><%= student.dorm_id %></td>
        <td>
          <a href="/students/<%= student.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/students/<%= student.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_student/<%= student.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

