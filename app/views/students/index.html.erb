<div class="page-header">
  <h1>Students</h1>
</div>


<!--<p><a href="/students/new" class="btn btn-primary">Add a New Student</a></p>-->

<table class="table table-hover">
  <thead>
    <tr>
      <th>Email</th>
      <th>Email end</th>
      <th>First name</th>
      <th>Last name</th>
      <th>School</th>
      <th>Pref location</th>
      <th>Gender</th>
      <th>Country</th>
      <th>Dorm</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.email %></td>
        <td><%= student.email_end %></td>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.school.name %></td>
        <td><%= student.pref_location %></td>
        <td><%= student.gender %></td>
        <td><%= student.country %></td>
        <% if student.dorm_id.present? %>
          <td><%= student.dorm_id %></td>
        <% else %>
          <td>TBD</td>
        <% end %>
        <td>
          <a href="/students/<%= student.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/students/<%= student.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_student/<%= student.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

