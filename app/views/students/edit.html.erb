        <div class="col-sm-10">
          <input type="text" id="country" name="country" placeholder="Country" class="form-control" value="<%= @student.country %>">
        </div>
      </div>

      <!-- Label and input for dorm_id -->
      <div class="form-group">
        <label for="dorm_id" class="col-sm-2 control-label">
          Dorm
