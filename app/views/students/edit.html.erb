<% if @student.errors.any? %>
  <% @student.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1><%= @student.first_name %> <%= @student.last_name %> </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_student/<%= @student.id %>" class="form-horizontal">
      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">
          Email
        </label>
        <div class="col-sm-10">
          <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= @student.email %>">
        </div>
      </div>

      <!-- Label and input for first_name -->
      <div class="form-group">
        <label for="first_name" class="col-sm-2 control-label">
          First name
        </label>
        <div class="col-sm-10">
          <input type="text" id="first_name" name="first_name" placeholder="First name" class="form-control" value="<%= @student.first_name %>">
        </div>
      </div>

      <!-- Label and input for last_name -->
      <div class="form-group">
        <label for="last_name" class="col-sm-2 control-label">
          Last name
        </label>
        <div class="col-sm-10">
          <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @student.last_name %>">
        </div>
      </div>

      <!-- Label and input for pref_location -->
      <div class="form-group">
        <label for="pref_location" class="col-sm-2 control-label">
          Pref location
        </label>
        <div class="col-sm-10">
          <input type="text" id="pref_location" name="pref_location" placeholder="Pref location" class="form-control" value="<%= @student.pref_location %>">
        </div>
      </div>

      <!-- Label and input for gender -->
      <div class="form-group">
        <%= select_tag(:gender, options_from_collection_for_select(["Male", "Female"], [1,2], :gender, @student.gender), :class => "form-control") %>
      </div>

      <!-- Label and input for country -->
      <div class="form-group">
        <label for="country" class="col-sm-2 control-label">
          Country
        </label>
        <div class="col-sm-10">
          <input type="text" id="country" name="country" placeholder="Country" class="form-control" value="<%= @student.country %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Student" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>
