<% if @question.errors.any? %>
  <% @question.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Question #<%= @question.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_question/<%= @question.id %>" class="form-horizontal">
      <!-- Label and input for question -->
      <div class="form-group">
        <label for="question" class="col-sm-2 control-label">
          Question
        </label>
        <div class="col-sm-10">
          <input type="text" id="question" name="question" placeholder="Question" class="form-control" value="<%= @question.question %>">
        </div>
      </div>

      <!-- Label and input for school_id -->
      <div class="form-group">
        <label for="school_id" class="col-sm-2 control-label">
          School
        </label>
        <div class="col-sm-10">
          <input type="text" id="school_id" name="school_id" placeholder="School" class="form-control" value="<%= @question.school_id %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Question" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

