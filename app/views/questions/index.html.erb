<% if current_student.school_admin == true || current_student.admin == true %>
<div class="page-header">
  <h1>Questions</h1>
</div>

<p><a href="/questions/new" class="btn btn-primary">Add a New Question</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Question</th>
      <th>School</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <% if (current_student.admin != true && question.school_id == current_student.school_id) || current_student.admin == true %>
      <tr>
        <td><%= question.question_text %></td>
        <td><%= School.find_by({ :id => question.school_id }).name %></td>
        <td>
          <a href="/questions/<%= question.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/questions/<%= question.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_question/<%= question.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<% end %>

