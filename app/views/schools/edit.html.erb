<% if @school.errors.any? %>
  <% @school.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit School #<%= @school.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_school/<%= @school.id %>" class="form-horizontal">
      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @school.name %>">
        </div>
      </div>

      <!-- Label and input for email_end -->
      <div class="form-group">
        <label for="email_end" class="col-sm-2 control-label">
          Email end
        </label>
        <div class="col-sm-10">
          <input type="text" id="email_end" name="email_end" placeholder="Email end" class="form-control" value="<%= @school.email_end %>">
        </div>
      </div>

      <!-- Label and input for theme -->
      <div class="form-group">
        <label for="theme" class="col-sm-2 control-label">
          Theme
        </label>
        <div class="col-sm-10">
          <input type="text" id="theme" name="theme" placeholder="Theme" class="form-control" value="<%= @school.theme %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update School" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

