<% if @response.errors.any? %>
  <% @response.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Response #<%= @response.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_response/<%= @response.id %>" class="form-horizontal">
      <!-- Label and input for student_id -->
      <div class="form-group">
        <label for="student_id" class="col-sm-2 control-label">
          Student
        </label>
        <div class="col-sm-10">
          <input type="text" id="student_id" name="student_id" placeholder="Student" class="form-control" value="<%= @response.student_id %>">
        </div>
      </div>

      <!-- Label and input for question_id -->
      <div class="form-group">
        <label for="question_id" class="col-sm-2 control-label">
          Question
        </label>
        <div class="col-sm-10">
          <input type="text" id="question_id" name="question_id" placeholder="Question" class="form-control" value="<%= @response.question_id %>">
        </div>
      </div>

      <!-- Label and input for qnaswer -->
      <div class="form-group">
        <label for="qnaswer" class="col-sm-2 control-label">
          Qanswer integer
        </label>
        <div class="col-sm-10">
          <input type="text" id="qnaswer" name="qnaswer" placeholder="Qanswer integer" class="form-control" value="<%= @response.qanswer %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Response" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>
