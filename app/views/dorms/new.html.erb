<% if @dorm.errors.any? %>
  <% @dorm.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Dorm</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_dorm" class="form-horizontal">
      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @dorm.name %>">
        </div>
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="col-sm-2 control-label">
          Address
        </label>
        <div class="col-sm-10">
          <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @dorm.address %>">
        </div>
      </div>

      <!-- Label and input for location -->
      <div class="form-group">
        <label for="location" class="col-sm-2 control-label">
          Location
        </label>
        <div class="col-sm-10">
          <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @dorm.location %>">
        </div>
      </div>

      <!-- Label and input for size -->
      <div class="form-group">
        <label for="size" class="col-sm-2 control-label">
          Size
        </label>
        <div class="col-sm-10">
          <input type="text" id="size" name="size" placeholder="Size" class="form-control" value="<%= @dorm.size %>">
        </div>
      </div>

      <!-- Label and input for gender_i -->
      <div class="form-group">
        <label for="gender_i" class="col-sm-2 control-label">
          Gender i
        </label>
        <div class="col-sm-10">
          <input type="text" id="gender_i" name="gender_i" placeholder="Gender i" class="form-control" value="<%= @dorm.gender_i %>">
        </div>
      </div>

      <!-- Label and input for school_id -->
      <div class="form-group">
        <label for="school_id" class="col-sm-2 control-label">
          School
        </label>
        <div class="col-sm-10">
          <input type="text" id="school_id" name="school_id" placeholder="School" class="form-control" value="<%= @dorm.school_id %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Dorm" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

