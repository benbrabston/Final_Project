<% if current_student.school_admin == true || current_student.admin == true %>
<div class="page-header">
  <% if current_student.admin == true %>
  <h1>Dorms across Schools</h1>
  <% elsif current_student.school_admin == true  %>
  <h1>Dorms at <%= current_student.school.name %></h1>
  <% end %>
</div>

<p><a href="/dorms/new" class="btn btn-primary">Add a New Dorm</a></p>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Size</th>
      <th>School</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dorms.each do |dorm| %>
      <% if dorm.school_id == current_student.school_id || current_student.admin == true %>
      <tr>
        <td><%= dorm.name %></td>
        <td><%= dorm.address %></td>
        <td><%= dorm.size %></td>
        <td><%= dorm.school.name %></td>
        <td>
          <a href="/dorms/<%= dorm.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/dorms/<%= dorm.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_dorm/<%= dorm.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<% end %>
