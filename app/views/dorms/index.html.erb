<div class="page-header">
  <h1>Dorms</h1>
</div>

<p><a href="/dorms/new" class="btn btn-primary">Add a New Dorm</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Size</th>
      <th>Gender i</th>
      <th>Crit 1</th>
      <th>Crit 2</th>
      <th>Crit 3</th>
      <th>Crit 4</th>
      <th>Crit 5</th>
      <th>Crit 6</th>
      <th>Crit 7</th>
      <th>Crit 8</th>
      <th>Crit 9</th>
      <th>Crit 10</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dorms.each do |dorm| %>
      <tr>
        <td><%= dorm.name %></td>
        <td><%= dorm.address %></td>
        <td><%= dorm.size %></td>
        <td><%= dorm.gender_i %></td>
        <td><%= dorm.crit_1 %></td>
        <td><%= dorm.crit_2 %></td>
        <td><%= dorm.crit_3 %></td>
        <td><%= dorm.crit_4 %></td>
        <td><%= dorm.crit_5 %></td>
        <td><%= dorm.crit_6 %></td>
        <td><%= dorm.crit_7 %></td>
        <td><%= dorm.crit_8 %></td>
        <td><%= dorm.crit_9 %></td>
        <td><%= dorm.crit_10 %></td>
        <td>
          <a href="/dorms/<%= dorm.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/dorms/<%= dorm.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_dorm/<%= dorm.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

