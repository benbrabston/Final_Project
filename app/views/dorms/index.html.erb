<div class="page-header">
  <h1>Dorms</h1>
</div>

<p><a href="/dorms/new" class="btn btn-primary">Add a New Dorm</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Location</th>
      <th>Size</th>
      <th>Gender i</th>
      <th>School</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dorms.each do |dorm| %>
      <tr>
        <td><%= dorm.name %></td>
        <td><%= dorm.address %></td>
        <td><%= dorm.location %></td>
        <td><%= dorm.size %></td>
        <td><%= dorm.gender %></td>
        <td><%= dorm.school_id %></td>
        <td>
          <a href="/dorms/<%= dorm.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/dorms/<%= dorm.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_dorm/<%= dorm.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

